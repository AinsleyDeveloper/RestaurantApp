<Page
    x:Class="RestaurantApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="520" Width="560">

    <Grid HorizontalAlignment="Center" Width="560" VerticalAlignment="Stretch">
        <TextBox x:Name="TBoxUserName" Margin="120,168,171,309" Text="" FontSize="20"/>
        <PasswordBox x:Name="PBoxPassword" Margin="120,260,171,0" VerticalAlignment="Top" Height="40" FontSize="20"/>
        <Button x:Name="BtnLogin" Content="Login" HorizontalAlignment="Stretch" Margin="192,328,243,0" VerticalAlignment="Top" Width="125" Click="BtnLogin_Click" FontSize="20"/>
        <TextBlock x:Name="TxtUserName" HorizontalAlignment="Left" Margin="120,136,0,0" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="TxtPassword" HorizontalAlignment="Left" Margin="120,228,0,0" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Page>
